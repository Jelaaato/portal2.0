@model Portal.Models.ViewModels.LaboratoryModel
@{
    Layout = "~/Views/Shared/_FormsLayout.cshtml";
}

<div class="mobile-wrapper">
    <div class="form-bottom">
        <div class="form-box" style="background-color:white;box-shadow: rgba(0,0,0, 0.2) 6px 6px;">
            <span style="color:#73AE6A;font-size:16px;text-align:center;" class="subtext">Please provide your password</span>
            <br /><br />
            @Html.ValidationSummary(false)
            <br />

            <div class="hidden-xs hidden-sm">
                @using (Html.BeginForm(new { returnUrl = ViewBag.returnUrl, accessed_in = "browser" }))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            @Html.PasswordFor(a => a.password, new { @class = "form-control", @placeholder = "PASSWORD" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <button class="btn btn-block regular-btn" type="submit">PROCEED</button>
                    </div>
                    <div class="form-group">
                        <center><a href="@Url.Action("LaboratoryResults", "Results")"><span class="subtext" style="color:#73AE6A;">Return to Laboratory Results</span></a></center>
                    </div>
                }
            </div>

            <div class="visible-xs visible-sm">
                @using (Html.BeginForm(new { returnUrl = ViewBag.returnUrl, accessed_in = "mobile" }))
                {
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            @Html.PasswordFor(a => a.password, new { @class = "form-control", @placeholder = "PASSWORD" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <button class="btn btn-block regular-btn" type="submit">PROCEED</button>
                    </div>
                    <div class="form-group">
                        <center><a href="@Url.Action("LaboratoryResults", "Results")"><span class="subtext" style="color:#73AE6A;">Return to Laboratory Results</span></a></center>
                    </div>
                }
            </div>
            
        </div>
    </div>
</div>
