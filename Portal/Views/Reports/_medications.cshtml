@model PagedList.IPagedList<Portal.Models.Reports.patient_medications>
@using PagedList.Mvc;
@using PagedList;

@if (Model.Count() != 0)
{
<div id="tbl-wrapper4">
    <div class="table-responsive">
        <table class="table" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;color:white;text-align:center;">
            <thead class="table-bordered" style="background-color:rgba(31,150,102, 0.8);">
                <tr>
                    <th style="text-align:center;font-weight:400;">Date</th>
                    <th style="text-align:center;font-weight:400;">Details</th>
                </tr>
            </thead>
            <tbody class="table-bordered" style="color:black;">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.note_date)</td>
                        <td>@Html.DisplayFor(model => item.details)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <center>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("OMCPMedications", new { page, currentfilter = ViewBag.CurrentFilter }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
        new AjaxOptions()
        {
            HttpMethod = "GET",
            UpdateTargetId = "tbl-wrapper4"
        }))
    </center>
</div>
}
else
{
    <h5>No available records</h5>
}