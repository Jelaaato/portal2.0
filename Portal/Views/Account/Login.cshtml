@model Portal.Models.IdentityDBModel_TemporaryLogin_.LoginModel
@using Vereyon.Web
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/opensourcedll/animate/animate.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-8 hidden-xs hidden-sm login-page-left-side"></div>
            <div class="col-lg-4 col-md-4 login-page-right-side">
                <center>
                    <div class="mobile-wrapper">
                        <div class="form-bottom">
                            <div class="form-box">
                                <span class="green-font">Asian Hospital and Medical Center</span>
                                <br /><br />
                                @Html.ValidationSummary(true)
                                <br />

                                @using (Html.BeginForm(new { returnUrl = ViewBag.returnUrl }))
                                {
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            @Html.TextBoxFor(a => a.username, new { @class = "form-control customtooltip", @placeholder = "USER ID", @id = "userID"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            @Html.PasswordFor(a => a.password, new { @class = "form-control", @placeholder = "PASSWORD" })
                                        </div>
                                        <div>
                                            <a href="@Url.Action("ForgotPassword", "Account")"><span class="subtext" style="color:#19AE52;">Forgot your password?</span></a>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-success" type="submit" style="float:right;">SIGN IN</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </center>
                <div class="black-font page-bottom">
                    <i class="fa fa-facebook-square fa-2x"></i>&nbsp;
                    <i class="fa fa-twitter-square fa-2x"></i>&nbsp;
                    <i class="fa fa-instagram fa-2x"></i>
                </div>
            </div>
        </div>   
    </div>
</body>
</html>


<script src="~/Scripts/jQuery/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
<script src="~/Content/opensourcedll/notify/bootstrap-notify.min.js"></script>

@foreach (var message in FlashMessage.Retrieve(Html.ViewContext.HttpContext))
{ 
    <script>
        $.notify({
            message: '@message.Message'
        }, {
            type: 'danger',
            showProgressbar: true,
            animate: {
                enter: 'animated fadeInRight',
                exit: 'animated fadeOutRight'
            },
            template: '<div data-notify="container" class="col-xs-11 col-sm-3 alert alert-{0}" role="alert">' +
		                    '<button type="button" aria-hidden="true" class="close" data-notify="dismiss" style="color:black;font-size:12px;"><span class="fa fa-close"></span></button>' +
		                    '<span data-notify="message" class="notification">{2}</span>' +
		                    '<div class="progress" data-notify="progressbar">' +
			                    '<div class="progress-bar progress-bar-{0}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>' +
		                    '</div>' +
	                  '</div>'
        });
    </script>
}

<script>
    $('#userID').on('click', function () {
        $.notify({
            icon: 'fa fa-exclamation-circle',
            title: '&nbsp; REMINDER: DESIGNATED USER ID<br/><br>',
            message: '<strong>Patients</strong> : Hospital Number<br/>' +
                     '<strong>Doctors</strong> : 4-Digit Employee Number<br/>' +
                     '<strong>Employees</strong> : Employee ID (Format: *-**-**-****)</br>'
        }, {
            type: 'info',
            showProgressbar: true,
            animate: {
                enter: 'animated fadeInRight',
                exit: 'animated fadeOutRight'
            },
            template: '<div data-notify="container" class="col-xs-11 col-sm-3 alert alert-{0}" role="alert" style="text-align:justify;">' +
		                    '<button type="button" aria-hidden="true" class="close" data-notify="dismiss" style="color:black;font-size:12px;"><span class="fa fa-close"></span></button>' +
                            '<span data-notify="icon"></span>' +
	                        '<span data-notify="title">{1}</span>' +
		                    '<span data-notify="message" class="notification" style="font-size:14px;">{2}</span>' +
		                    '<div class="progress" data-notify="progressbar">' +
			                    '<div class="progress-bar progress-bar-{0}" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>' +
		                    '</div>' +
	                  '</div>'
        });
    })
</script>