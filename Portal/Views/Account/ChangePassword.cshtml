@model Portal.Models.IdentityDBModel_TemporaryLogin_.ChangePasswordModel
@{
    Layout = "~/Views/Shared/_FormsLayout.cshtml";
}

<div class="mobile-wrapper">
    <div class="form-bottom">
        <div class="form-box" style="background-color:white;box-shadow: rgba(0,0,0, 0.2) 6px 6px;">
            <span style="color:#73AE6A;font-size:16px;text-align:center;" class="subtext">Change your password</span>
            <br /><br />
            @Html.ValidationSummary(false)
            <br />

            @using (Html.BeginForm(new { returnUrl = ViewBag.returnUrl }))
            {
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(a => a.oldPassword, new { @class = "form-control", @placeholder = "CURRENT PASSWORD" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(a => a.newPassword, new { @class = "form-control", @placeholder = "NEW PASSWORD" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        @Html.PasswordFor(a => a.confirmPassword, new { @class = "form-control", @placeholder = "CONFIRM PASSWORD" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <button class="btn btn-block regular-btn" type="submit">PROCEED</button>
                </div>
                <div class="form-group">
                    <center><a href="@Url.Action("Index", "Home")"><span class="subtext" style="color:#73AE6A;">Return to Home</span></a></center>
                </div>
            }
        </div>
    </div>
</div>
