    var baseUrl = '@Url.Action("LaboratoryResults", "Results")';

    $('#lab_type_options').change(function () {
        var lab_type = $('#lab_type_options').val();
        var url = baseUrl + '?lab_order_name=' + lab_type
        location.href = url;
    })
</script>
